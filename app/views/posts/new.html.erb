<div class="col-sm-offset-4 col-sm-4">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">Create a post</h3>
    </div>
    <div class="panel-body">
      <%= bootstrap_form_for @post do |f| %>
        <%= f.text_field :title, placeholder: 'My interesting title' %>
        <%= f.text_field :link, placeholder: 'http://www.example.com' %>
        <%= f.primary "Post" %>
      <% end %>
    </div>
  </div>
</div>