<div class="col-sm-8">
  <table class="table table-striped">
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td>
            <%= link_to "", "#", class: 'glyphicon glyphicon-chevron-up' %><br>
            <%= link_to "", "#", class: 'glyphicon glyphicon-chevron-down' %>
          </td>
          <td>
            <a href="<%= post.link %>"><%= post.title %></a>
          </td>
          <td><%= post.user.display_name %></td>
          <td><%= format_creation_time post %></td>
          <td>0 Comments</td>
          <td>
          <!--% if @current_user && @current_user.id == post.user.id %-->
          <% if post.owned_by? @current_user %>
            <%= link_to "", edit_post_path(post), class: 'glyphicon glyphicon-pencil' %>
            <%= link_to "", post, method:'delete', class: 'glyphicon glyphicon-trash' %>
          <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="col-sm-4">
  <div class="advertisement">
    <div class="text">
      THIS IS AN<br>
      ADVERTISEMENT
    </div>
  </div>
</div>